%p
  %b Login:
  = h @user.login
%p
  %b Google Code Login:
  = h @user.google_code_login
%p
  %b webdav url:
  %a{:href => "http://#{@user.login}.archiveofourown.org/webdav/"}
    = "http://#{@user.login}.archiveofourown.org/webdav/"
- if current_user == @user || current_user.try(:admin)
  %p
    %b email:
    = @user.email
  %p
    %b webdav password:
    = @user.visible_password
  - if current_user.try(:admin)
    %p
      %b session secret:
      = @user.session_secret
%p
  - if current_user
    = link_to 'Edit', edit_user_path(@user)
    |
    = link_to 'Logout', logout_path
  - else
    = link_to 'New user', new_user_path
    |
    = link_to 'Login', new_user_session_path
  | 
  = link_to 'All users', users_path
