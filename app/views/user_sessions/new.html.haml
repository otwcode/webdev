%h1 Login
= form_for(@user_session) do |f|
  -if @user_session.errors.any?
    #red
      - @user_session.errors.full_messages.each do |msg|
        %li= msg
  %dl
    %dt
      = f.label :login
    %dd
      = f.text_field :login
    %dt
      = f.label :password
    %dd
      = f.password_field :password
  %p
    = f.submit 'Log in'
= link_to 'Back', user_sessions_path
